{
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "node",
    "target": "es2016",
    "noImplicitAny": false,
    "outDir": "./out",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "include": [
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
}