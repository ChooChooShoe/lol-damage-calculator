{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": false,
    "outDir": "../build",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./../src/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["./../src/api/*", "./*"]
}
