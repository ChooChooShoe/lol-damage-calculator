{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2016",
        "lib": [
            "ES2018",
            "dom",
            "dom.iterable"
        ],
        "noImplicitAny": false,
        "outDir": "../build",
        "esModuleInterop": true,
        "strict": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
}